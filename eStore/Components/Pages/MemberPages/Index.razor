@page "/members"
@using Services.DTO
@inject Services.Interface.IMemberService MemberService

<PageTitle>Danh sách thành viên</PageTitle>

<h1>Danh sách thành viên</h1>

<p>
    <a href="members/create">Tạo mới</a>
</p>

@if (members == null)
{
    <p>Đang tải dữ liệu...</p>
}
else if (!members.Any())
{
    <p>Không có thành viên nào.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Công ty</th>
                <th>Thành phố</th>
                <th>Quốc gia</th>
                <th>Mật khẩu</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in members)
            {
                <tr>
                    <td>@member.Email</td>
                    <td>@member.CompanyName</td>
                    <td>@member.City</td>
                    <td>@member.Country</td>
                    <td>@member.Password</td>
                    <td>
                        @(member.IsActive ? "Hoạt động" : "Vô hiệu hóa")
                    </td>
                    <td>
                        <a href="@($"members/details?memberid={member.MemberId}")">Chi tiết</a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<MemberDto>? members;

    protected override async Task OnInitializedAsync()
    {
        var result = await MemberService.GetAllAsync();
        members = result.ToList();
    }
}
